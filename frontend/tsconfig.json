{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "components/loader/Loader.jsx",
    "components/card/index.js",
    "pages/meals/index.jsx",
    "pages/index.tsx",
    "common/utils.js",
    "components/Navbar/components/NavOption.jsx",
    "components/containers/Container.jsx",
    "components/button/Button.jsx",
    "components/Navbar/Sidebar.jsx",
    "components/page-header/Header.jsx",
    "common/hocs/MainContainer.jsx",
    "common/components/loadingModal/index.jsx",
    "pages/menus/index.jsx"
  ],
  "exclude": ["node_modules"]
}
